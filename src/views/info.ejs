<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <header>
    <%- include('./partials/nav.ejs') %>
  </header>

  <div class="container">
    <div class="jumbotron" style="margin-top: 200px;">
      <div style="display: flex;  justify-content: space-between; align-items: center;">
        <h1><%= deputado.nome %> </h1>
        <img src="<%= deputado.urlFoto %>" alt="<%= deputado.nome %> >"
          style="max-width: 280px; max-height: 340px; min-width: 280px; min-height: 340px; border-radius: 50%;">
      </div>
    </div>

    <div class="jumbotron">
      <ul class="list-group">
        <li class="list-group-item">Estado: <%= deputado.siglaUf %></li>
        <li class="list-group-item">Partido: <%= deputado.siglaPartido %></li>
        <li class="list-group-item">Email: <%= deputado.email %></li>
        <li class="list-group-item">Situação: <%= deputado.situacao %></li>
      </ul>
    </div>
  </div>

  <%- include('./partials/scripts.ejs') %>
</body>

</html>